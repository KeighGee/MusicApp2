<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inage6"
    tools:context="com.example.admin.musicalapp.MainActivity">


    <Button
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:text="PAUSE"
        android:textStyle="bold"
        android:background="#54864545"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="PLAY"
        android:background="#54864545"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/button_pause"
        android:layout_alignLeft="@+id/button_pause"
        android:layout_alignStart="@+id/button_pause" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:background="#54864545"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button_play"
        android:layout_alignLeft="@+id/button_play"
        android:layout_alignStart="@+id/button_play" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#54864545"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="NEXT"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/button_play"
        android:layout_alignBottom="@+id/button_play"
        android:layout_toLeftOf="@+id/button_play"
        android:layout_toStartOf="@+id/button_play" />

    <Button
        android:id="@+id/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#54864545"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/button_play"
        android:layout_alignBottom="@+id/button_play"
        android:layout_toRightOf="@+id/button_play"
        android:layout_toEndOf="@+id/button_play" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="BY: KGOMOTSO"
        android:textColor="@color/colorAccent"/>


</RelativeLayout>
